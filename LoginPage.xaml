<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorklightSample.LoginPage">
	<ContentPage.Content>
	<StackLayout BackgroundColor="Black" x:Name="loginlayout" Padding="20">  
      <Label Text="Login " TextColor="White" FontSize="20"></Label>  
      <Entry x:Name="UserName" Placeholder="User Name" WidthRequest="150"></Entry>  
      <Entry x:Name="Password" IsPassword="true" Placeholder="Password" WidthRequest="150"></Entry>  
      <StackLayout BackgroundColor="Black" Orientation="Horizontal">  
        <Button BackgroundColor="Gray" x:Name="login" TextColor="White" Text="Login" Clicked="Login_Clicked"/>  
        <Button BackgroundColor="Maroon" x:Name="cancel" TextColor="White" Text="Cancel" Clicked="Cancel_Clicked"/>  
      </StackLayout>  
    </StackLayout> 
	</ContentPage.Content>
</ContentPage>
