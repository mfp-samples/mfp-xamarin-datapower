<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="White" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorklightSample.ResourceRequestPage">
	<ContentPage.Content>
	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
	<StackLayout  x:Name="balanceprogresslayout" Padding="20">  
		<Label  IsVisible="false" Text="Fetching Balance. Please Wait....." x:Name="progresstext" TextColor="Black" FontSize="20"></Label>  		
	</StackLayout>
	<StackLayout  IsVisible="true" x:Name="balancelayout" Padding="20">  
		<Button x:Name="getbalance" Text="Get Balance"/>
	</StackLayout>

		<StackLayout>
		   <Label Text="" x:Name="balancetext" TextColor="Black" FontSize="20"></Label>  		
		</StackLayout>
	<StackLayout BackgroundColor="Black" IsVisible="false" x:Name="loginlayout" Padding="20">  
      <Label Text="Login " TextColor="White" FontSize="20"></Label>  
      <Entry x:Name="UserName" Placeholder="User Name" WidthRequest="150"></Entry>  
      <Entry x:Name="Password" IsPassword="true" Placeholder="Password" WidthRequest="150"></Entry>  
      <StackLayout BackgroundColor="Black" Orientation="Horizontal">  
        <Button BackgroundColor="Gray" x:Name="login" TextColor="White" Text="Login"/>  
        <Button BackgroundColor="Maroon" x:Name="cancel" TextColor="White" Text="Cancel"/>  
      </StackLayout>  
    </StackLayout> 
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
